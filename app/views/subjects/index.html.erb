<% @page_title = "Subjects" %>
<div class="subjects index">
	<h2>Subjects</h2>
     
    <%=  %>
	<%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Subject", {:action => 'new'}, :class => 'action new') %>
    <!-- This adds pluralisation -->
    
    <div><p><%= pluralize(@subjects.size, 'subject') %> found</p></div>

	<table class="listing" summary="Subjects list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visable</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
        <tr class="<%= cycle('odd', 'even') %>">
			<td><%= subject.position %></td>
			<td><%= subject.name %></td>
			<td class="center"><%= status_tag(subject.visable) %></td>
			<td class="center"><%= subject.pages.size %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
