<% @page_title = "Section - New" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="section new">
	<h2>Create Subject</h2>

	<%= form_for(:section, :url => {:action => 'create'}) do |f| %>
	<table summary="Section form fields">
	  	<tr>
	  		<th>Name</th>
	  		<td><%= f.text_field(:name) %></td>
	  	</tr>
	  	<tr>
	  		<th>Position</th>
	  		<td><%= f.text_field(:position) %></td>
	  	</tr>
	  	<tr>
	  		<th>Visible</th>
	  		<td><%= f.check_box(:visable) %></td>
	  	</tr>
	  	<tr>
	  		<th>Page ID</th>
	  		<td><%= f.text_field(:page_id) %></td>
	  	</tr>
	  	<tr>
	  		<th>Content Type</th>
	  		<td><%= f.text_field(:content_type) %></td>
	  	</tr>
	  	<tr>
	  		<th>Content</th>
	  		<td><%= f.text_field(:content) %></td>
	  	</tr>
	</table>

	<div class="form-buttons">
		<%= submit_tag("Create Subject") %>
	</div>

	<% end %>
</div>
